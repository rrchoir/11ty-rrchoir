---
layout: layouts/base.njk
section: event
---

<article>
  <h1>{{ title }}</h1>

  <h3>{{ summary | safe }}</h3>
  {{start_date | readableDateTime}}<br>
  {{ content | safe }}
   
  <h2>Song list</h2>
  {% for song in songs | sort(attribute='title') %}
    <h4 style="font-size: 18px; font-weight: bold;">
      <a href="/songs/{{ song | slug | url }}">
        {{ song }}
      </a>
    </h4>
  {% endfor %}
  {% if resources %}
  <h2 style="font-size: 22px; font-weight: bold;">
  Resources: </h2>
  <ul>
    {% for resource in resources %}
        <li><a target="_blank" href="{{ resource.url }}">{{ resource.text }}</a></li>
    {% endfor %}
  </ul>
  {% endif %}
</article>

<nav>
  <a href="{{ '/events/' | url }}">Event index</a>
</nav>
