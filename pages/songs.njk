---
title: Songs
metaDescription: The page lists all the songs by category
layout: layouts/base.njk
eleventyNavigation:
  key: Songs
  order: 3
pagination:
  data: collections.categories
  size: 2
permalink: /songs/index.html
---

<h1>{{ title }}</h1>

<section>
  {% for category in pagination.items %}
    <article>
      <h2><u>{{ category | safe }}</u></h2>

      {% for song in collections.categories[category] %}
      <h4>
				<a href="{{ song.page.url | url }}">
					{% if song.title %}
						{{ song.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
      </h4>
      {% endfor %}

    </article>
  {% endfor %}
  <nav>
    <a href="{{ '/blog/' | url }}">‚Üê Blog index</a>
  </nav>
</section>